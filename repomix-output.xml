}

.score-capsule {
  position: absolute;
  bottom: 40px;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 12px;
  background: white;
  padding: 10px 35px;
  border-radius: 999px;
  border: 4px solid #F8C4B4;
  box-shadow: 0 8px 15px rgba(0, 0, 0, 0.3);
