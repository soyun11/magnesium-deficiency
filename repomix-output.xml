/* 아래에서 위 타겟까지 올라가는 애니메이션 */
@keyframes moveUpSmooth {
  from { bottom: -10%; }
  to { bottom: 100%; } /* 타겟 이모지 위치를 지나 화면 끝까지 */
}

.ui-layer {
  position: absolute;
  inset: 0;
  z-index: 150;
